<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yulian.myapplication.MainActivity"
    android:weightSum="1"
    android:orientation="horizontal"
    android:foreground="#05a750cf"
    android:measureAllChildren="false"
    android:background="@drawable/backgroundthird">

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView"
        android:layout_column="48"
        android:layout_weight="2"
        android:textColor="#44ede1"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_button_min_width_overflow_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="87dp"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="118dp"
        android:layout_marginLeft="0dp"
        android:background="#fbfbfb" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/textView3"
        android:layout_column="48"
        android:layout_weight="2"
        android:textColor="#ea6a1b"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_bar_default_height_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="7dp"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_gravity="left|top"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="0dp"
        android:background="#fbfbfb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/button"
        android:layout_gravity="right|top"
        android:layout_marginTop="165dp"
        android:textColor="#1faac9"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP HERE"
        android:id="@+id/button2"
        android:layout_gravity="left|top"
        android:layout_marginTop="165dp"
        android:textColor="#5cc272"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:background="#ffffff" />

</FrameLayout>
