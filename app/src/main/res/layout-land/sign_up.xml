<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView2"
        android:layout_column="48"
        android:layout_weight="2"
        android:textColor="#ec9119"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_bar_default_height_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="18dp"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_gravity="left|top"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="75dp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Password"
        android:id="@+id/textView6"
        android:layout_column="48"

        android:textColor="#f41111"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_button_min_width_overflow_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="70dp"
        android:layout_gravity="left|center_vertical" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="220dp" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/textView7"
        android:layout_column="48"
        android:layout_weight="2"
        android:textColor="#1927ec"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_bar_default_height_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="113dp"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_gravity="left|top"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="120dp" />

    <EditText
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_gravity="left|top"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="170dp" />

    <TextView
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email Address"
        android:id="@+id/textView4"
        android:layout_column="48"
        android:layout_weight="2"
        android:textColor="#28d5b0"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_bar_default_height_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="65dp"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView5"
        android:layout_column="48"
        android:layout_weight="2"
        android:textColor="#f41111"
        android:textStyle="normal|italic"
        android:width="@dimen/abc_action_button_min_width_overflow_material"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="158dp"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="441dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/button3"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="237dp"
        android:textColor="#8123b7"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_dialog_padding_material" />

</FrameLayout>
